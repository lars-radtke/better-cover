{
    "name": "better-cover",
    "version": "0.0.1",
    "description": "React image component with focus placement.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lars-radtke/better-cover.git"
    },
    "homepage": "https://github.com/lars-radtke/better-cover",
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./styles.css": "./dist/styles.css"
    },
    "peerDependencies": {
        "react": "^19",
        "react-dom": "^19"
    },
    "scripts": {
        "build": "npm run build:js && npm run build:css",
        "build:js": "tsup src/index.ts --format esm --dts --clean",
        "build:css": "sass src/styles.scss dist/styles.css --no-source-map --style=compressed",
        "watch:css": "sass --watch src/styles.scss:dist/styles.css --no-source-map --style=compressed",
        "prepublishOnly": "npm run build",
        "storybook": "npm run build:css && storybook dev -p 6006",
        "dev": "npm-run-all --parallel watch:css storybook",
        "build:storybook": "npm run build:css && storybook build"
    },
    "devDependencies": {
        "@storybook/addon-webpack5-compiler-swc": "^4.0.2",
        "@storybook/react-webpack5": "^10.2.0",
        "@types/node": "^25.0.10",
        "@types/react": "^19",
        "npm-run-all": "^4.1.5",
        "react": "^19",
        "react-dom": "^19",
        "sass": "^1.97.3",
        "storybook": "^10.2.0",
        "tsup": "^8",
        "typescript": "^5"
    },
    "author": "Lars Radtke (https://github.com/lars-radtke)",
    "type": "module",
    "bugs": {
        "url": "https://github.com/lars-radtke/better-cover/issues"
    },
    "keywords": [
        "react",
        "nextjs",
        "next",
        "image",
        "img",
        "picture",
        "responsive-image",
        "cover",
        "object-fit",
        "object-position",
        "focus",
        "focal-point",
        "smart-crop"
    ],
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "sideEffects": [
        "**/*.css"
    ]
}